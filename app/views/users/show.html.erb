<%= render partial: 'template1', locals: { user: @user, book: @book } %>

<h2>Books</h2>
<table>
  <tbody>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tr>
      <% @books.each do |book| %>
      <th><%= image_tag @user.get_profile_image(100,100) %></th>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <% end %>
    </tr>
  </tbody>
</table>

