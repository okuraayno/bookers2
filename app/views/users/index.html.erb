<%= render partial: 'template1', locals: { user: @user, book: @book } %>

<h2>Users</h2>
<table>
  <tbody>
    <tr>
      <th></th>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    <tr>
      <% @users.each do |user| %>
      <th><%= image_tag user.get_profile_image(100, 100) %></th>
      <th><%= user.name %></th>
      <th><%= link_to "Show", show_user_path(user) %></th>
      <% end %>
    </tr>
  </tbody>
</table>

